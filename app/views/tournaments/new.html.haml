=form_for @tournament do |f|
  -@tournament.errors.full_messages.each do |msg|
    %li= msg 
  %p
    =f.label 'Nazwa'
    =f.text_field :name
    
    =f.label 'Typ'
    =f.select :rank, options_for_select(Tournament::TournamentRanks)
  %p
    =f.label 'Turniej drużynowy(także parowy)'
    =f.check_box :for_teams
    
    =f.label 'Ilość graczy w drużynie'
    =f.text_field :team_members_count
  %p
    =f.label 'Ilość rund'
    =f.text_field :number_of_rounds

    =f.label 'Duże punkty za pauzę'
    =f.text_field :pause_game_points

    =f.label 'Małes punkty za pauzę'
    =f.text_field :pause_victory_points
    
    =f.label 'Data rozpoczęcia'
    =f.text_field :start_date, class: "datepicker"
  %p
    =f.label 'Miasto'
    =f.text_field :city
  %p
    =f.submit 'Utwórz turniej', :class => 'btn'
