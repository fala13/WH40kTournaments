%label{:class => "label"}= t("activerecord.attributes.post.name", :default => t("activerecord.labels.name", :default => "Name")) + ":"
%p= @post.name
%label{:class => "label"}= t("activerecord.attributes.post.body", :default => t("activerecord.labels.body", :default => "Body")) + ":"
%p= @post.body

.form-actions
  = link_to "Back", posts_path, :class => 'btn'
  = link_to "Edit", edit_post_path(@post), :class => 'btn'
  = link_to "Delete", post_path(@post), :method => "delete", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}", :class => 'btn'
