.post
  %h2
    = post.name
  .body
    = post.body
  -if logged_in?
    .links
      = link_to "Show", post_path(post)
      = link_to "Edit", edit_post_path(post)
      = link_to "Destroy", post_path(post), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"

