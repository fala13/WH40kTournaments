.add_player
  %p
    Dodaj nowego gracza
  = form_for @player do |f|
    %p
      = f.label :league_id, "ID ligowe"
      = f.text_field :league_id
    %p
      = f.label :first_name, "ImiÄ™"
      = f.text_field :first_name
    %p
      = f.label :last_name, "Nazwisko"
      = f.text_field :last_name
    %p
      = f.label :nick, "Nick"
      = f.text_field :nick
    %p
      = f.label :city, "Miasto"
      = f.text_field :city
