%tr
  %th
    = "#{i + 1}"
  %th
    =booking.first_name
  %th
    =booking.last_name
  %th
    =booking.email
  %th
    =booking.payment? ? "tak" : "nie"
    -if logged_in?
      =link_to "", toggle_payment_hostel_booking_path(booking), :style => "margin-left:8px", :class => "#{booking.payment? ? 'icon-remove' : 'icon-ok'}"
  -if logged_in?
    %th
      =link_to "", edit_hostel_booking_path(booking), :class => 'icon-edit'
      =link_to "", hostel_booking_path(booking), :class => 'icon-remove', :method => :delete, :confirm => "Are you sure?"
