<td class='table_nr'>
  <div>
    Stół: <%= table %>
  </div>
  <% if( pausing == false ){ %>
    <div class='add-results'>
      <a href="#modal_<%= id %>" data-toggle="modal"><i class="icon-plus"></i> Dodaj wynik</a>
    </div>
  <% } %>

  <div id="modal_<%= id %>" class="modal hide fade" role="dialog" >
    <form id="update_pairing">
      <div class='game-points'>
        <label for="player1_game_points">Małe punkty - <%= player1_name %></label>
        <input type="number" name="player1_game_points" id="player1_game_points" value='<%= player1_game_points %>' >
      </div>
      <div class='match-points'>
        <label for="player1_match_points">Duże punkty - <%= player1_name %></label>
        <input disabled type="number" name="player2_match_points" id="player1_match_points" value='<%= player1_match_points %>' >
      </div>
      <div class='game-points'>
        <label for="player2_game_points">Małe punkty - <%= player2_name %></label>
        <input type="number" name="player2_game_points" id="player2_game_points" value=<%= player2_game_points %> >
      </div>
      <div class='match-points'>
        <label for="player2_match_points">Duże punkty - <%= player2_name %></label>
        <input disabled type="number" name="player2_match_points" id="player2_match_points" value='<%= player2_match_points %>' >
      </div>
      <div class='submit'>
        <input type="submit" value="Dodaj wyniki" >
      </div>
      <div class='errors'></div>
    </form>
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  </div>

</td>
<td class='players'>
  <div class='player'>
    <% if(player1_name) { %>
      <span class='draggable'><%= player1_name %></span>
    <% } else {  %>
      pauza
    <% } %>
  </div>
  <div class='player'>
    <% if(player2_name) { %>
      <span class='draggable'><%= player2_name %></span>
    <% } else {  %>
      pauza
    <% } %>
  </div>
</td>
