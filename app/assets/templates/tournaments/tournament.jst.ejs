<table class='table table-bordered play-tournament'>
  <tr>
    <th><%= name %>, turniej klasy: <%= rank %></th>
  </tr>
  <tr>
    <th class='tournament_round'>Bieżąca runda <%= current_round %></th>
  </tr>
  <tr class='play-start'>
    <% if(state == 'finished'){ %>
      <th><button class='show-results'><a href=<%='/tournaments/' + Dmp40k.getTournamentId() + '/results'%>>Pokaż wyniki</a></button></td>
    <% } else if (window.currentUser && window.currentUser.admin == 'true'){ %>
      <th>
        <button class='generate-new-round'>Wygeneruj rundę</button>
        <button class='show-results'><a href=<%='/tournaments/' + Dmp40k.getTournamentId() + '/current_round'%> target='_blank'>Pokaż pary aktualnej rundy</a></button>
      </th>
    <% } else { %>
      <th><button class='show-results'><a href=<%='/tournaments/' + Dmp40k.getTournamentId() + '/current_round'%> target='_blank'>Pokaż pary aktualnej rundy</a></button></th>
    <% } %>
  </tr>
</table>
